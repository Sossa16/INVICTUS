<div class="field">
    <h1>Listing teams</h1>
    <div class="row">
        <% @team.each do |team| %>
                <div class="medium-3 large-3 columns border-team" style="background: url(<%= team.cover.url()%>); ">
                    <p>
                        <strong>Team name:</strong>
                        <%= team.team_name %>
                    </p>
                    <p>
                        <strong>Description:</strong>
                        <%= truncate(team.description, length:20 )%>
                    </p> 
                        <%= link_to 'Show', {:action => :show, :id =>team.id}, :class => "btn" %>

                        <%= link_to 'delete', {:action => :destroy, :id =>team.id}, {:class => "btn", method: :delete,
                          data: { confirm: 'Â¿Are you sure?' } }%> 
                </div>      
                         
        <% end %>
    </div> 
</div>
