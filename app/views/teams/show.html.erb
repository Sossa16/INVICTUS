<div class="field">
	<% if @team.save %>
		<h2>Your team has been successfully registered</h2>
	<%end%>
	<h1>Team</h1>
	<div class="row">
		<div class="medium-6 large-6 columns">
			<p>
				<h2>Team name:</h2>
				<%= @team.team_name %>
			</p>
			 <p>
				 <h2>Description:</h2>
				 <%= @team.description %>
			 </p>
		</div>
		<div class="medium-6 large-6 columns">
			<%= image_tag @team.cover.url(), :class => "team-img"%>
		</div>
	</div>
	<div class="wrapper">
		<%= link_to  'Back', teams_path, {:class =>"btn"} %> 
		<%= link_to  'Edit', edit_team_path, {:Action => :edit, :id => @team.id, :class =>"btn"} %>
	</div>
</div>