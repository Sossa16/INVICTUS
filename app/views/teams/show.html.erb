<div class="field">
	<h1>Team</h1>
	<div class="row">
		<div class="medium-6 large-6 columns">
			<p>
				<h2>Team name:</h2>
				<%= @team.team_name %>
			</p>
			 <p>
				 <h2>Description:</h2>
				 <%= @team.description %>
			 </p>
		</div>
		<div class="medium-6 large-6 columns">
			<%= image_tag @team.cover.url() %>
		</div>
	</div>
	<%= link_to  'Back', teams_path, {:class =>"btn"} %> 
	<%= link_to  'Edit', edit_team_path, {:Action => :edit, :id => @team.id, :class =>"btn"} %>
</div>